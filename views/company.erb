<h1> <%= @company.name %> </h1>

<br />

<div class="company_orders">
  <h4>Open Orders:</h4>
  <ul>
    <% @company.orders.each do |order| %>
      <li>
        <a href='/companies/<%= @company.id %>/orders/<%= order.month_id %>'><%= order.month_name%></a>
        <a href='/companies/<%= @company.id %>/orders/<%= order.id %>/delete'>
          <span class="glyphicon glyphicon-remove-circle warning" aria-hidden="true">Cancel Order</span>
        </a>
      </li>
    <% end %>
  <ul>
</div>

<br />

<div class='order_form'>
  <h5>Select which month of the year you would like to opt-in for a new order:</h5>
  <form action="/companies/<%= @company.id %>/orders" method="post">
    <select name="month" id="month">
      <option value="1">January</option>
      <option value="2">February</option>
      <option value="3">March</option>
      <option value="4">April</option>
      <option value="5">May</option>
      <option value="6">June</option>
      <option value="7">July</option>
      <option value="8">August</option>
      <option value="9">September</option>
      <option value="10">October</option>
      <option value="11">November</option>
      <option value="12">December</option>
    </select>
    <button type="submit">Submit</button>
  </form>
</div>
