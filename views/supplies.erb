<form action='/supplies' method='post'>
  Item Name: <input type='text' name='name' id='name'>
  <b>
  Unit Price: <input type="number" name="unit_price" min="0.01" max="9999" step="0.01" size="4" value="1.00">
  <b>
  <button type='submit'>Add Supply Item</button>
</form>
<br />
<br />
<ul>
  <% Supply.all.each do |supply| %>
    <li><a href='/supplies/<%= supply.id %>'><%= supply.name %></a> ($<%= supply.unit_price %> each)</li>
  <% end %>
</ul>
